<%- include('../partials/head.ejs', {tituloPagina: 'INVENTARIO'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h4>ITEMS EN INVENTARIO</h4>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item active">INVENTARIO</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <a href="/movimientosInventarioGrl" class="btn btn-success btn-flat btn-addon"><i class="ti-notepad"></i>Reporte de movimientos</a>  
                                <a href="/formadd2invent" class="btn btn-primary btn-flat btn-addon"><i class="ti-plus"></i>Añadir a Inventario</a>  
                                <a href="/adminunidades" class="btn btn-danger btn-flat btn-addon"><i class="ti-plus"></i>Gestionar Unidades</a>     
                            </div>
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="row-select" class="display table table-borderd table-hover">
                                        <thead>
                                            <tr>
                                                <th>Folio</th>
                                                <th>SKU</th>
                                                <th>Producto</th>
                                                <th>Categoria</th>
                                                <th>Tipo</th>
                                                <th>Marca</th>
                                                <th>Cantidad</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% inventario.forEach((item)=>{ %>
                                            <tr>
                                                <td><%= item.folio %></td>
                                                <td><%= item.sku %></td>
                                                <td><%= item.producto %></td>
                                                <td><%= item.categoria %></td>
                                                <td><%= item.tipo %></td>
                                                <td><%= item.marca %></td>
                                                <td><%= item.cantidad %> <%= item.abreviatura %></td>
                                                <td>
                                                    <div class="button-list">
                                                        <div class="btn-group btn-group-justified">
                                                            <button class="btn btn-primary btn-sm" onclick="editRegistro('<%= item.folio %>', '<%= item.folio_producto %>', '<%= item.cantidad %>', '<%= item.folio_unidad %>', '<%= user.folio %>')"><i class="ti-pencil"></i></button>
                                                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('<%= item.folio %>', '<%= item.folio_producto %>', '<%= item.cantidad %>', '<%= item.folio_unidad %>', '<%= user.folio %>')"><i class="ti-trash"></i></button>
                                                        </div>
                                                    </div>
                                                </td>   
                                            </tr>
                                            <% }) %> 
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Folio</th>
                                                <th>SKU</th>
                                                <th>Producto</th>
                                                <th>Categoria</th>
                                                <th>Tipo</th>
                                                <th>Marca</th>
                                                <th>Cantidad</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function crearCategoria(){
        Swal.fire({
            title: 'NUEVA CATEGORIA',
            input: 'text',
            icon: 'info',
            inputLabel: 'Nombre de la nueva categoria',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else{
                    const ruta = `/createCategoria/${value}`
                    window.location = ruta
                }
            }
        })
    }
    function editRegistro(registro, producto, cantidad, unidades, user){
        Swal.fire({
            title: 'Modificar la cantidad del producto en el inventario',
            input: 'number',
            icon: 'info',
            inputLabel: 'Ingrese la nueva cantidad, recuerde que la adicion o resta de inventario se registra en el reporte',
            showCancelButton: true,
            inputValue: cantidad,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else if(parseInt(value) < 0){
                    return 'No puede haber existencias negativas'
                }else{
                    if(parseInt(value) === 0){
                        const ruta = `/deleteFromInvent?registro=${registro}&producto=${producto}&cantidad=${cantidad}&unidades=${unidades}&usuario=${user}`
                        window.location = ruta
                    }else{
                        const ruta = `/modificarInvent?registro=${registro}&producto=${producto}&cantidadActual=${cantidad}&nuevaCantidad=${value}&unidades=${unidades}&usuario=${user}`
                        window.location = ruta
                    }
                }
            }
        })
    }
    function confirmDelete(registro, producto, cantidad, unidades, user){
        Swal.fire({
            title: '¿ESTAS SEGURO?',
            text: `Se eliminará el producto ${registro} del inventario`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Elimiar'
            }).then((result) => {
            if (result.isConfirmed) {
                const ruta = `/deleteFromInvent?registro=${registro}&producto=${producto}&cantidad=${cantidad}&unidades=${unidades}&usuario=${user}`
                window.location = ruta
            }
        })
    }
    
</script>

