<%- include('../partials/head.ejs', {tituloPagina: 'Editar Contacto'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 1){%>
                                    <li class="breadcrumb-item"><a href="/perfilCliente?cliente=<%= clienteSelected %>">Cliente</a></li>
                                    <%}else{%>
                                    <li class="breadcrumb-item"><a href="/admincontactos">Lista</a></li>
                                    <%} %> 
                                <li class="breadcrumb-item active">Editar Contacto</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>EDITAR CONTACTO</h4> 
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/editContact" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>NOMBRE</label>
                                                <input type="text" class="form-control" value="<%= contacto[0].nombre %>" id="nombre" name="nombre" required>
                                            </div>
                                            <div class="form-group">
                                                <label>EMAIL</label>
                                                <input type="email" class="form-control" value="<%= contacto[0].email %>" id="email" name="email" required>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">EDITAR CONTACTO</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>TELEFONO</label>
                                                <input type="text" class="form-control" value="<%= contacto[0].telefono %>" id="telefono" name="telefono" required>
                                            </div>
                                            <div class="form-group">
                                                <label>DESCRIPCION DE CARGO</label>
                                                <textarea class="form-control" rows="3" required name="descripcion" id="descripcion"><%= contacto[0].descripcion %></textarea>
                                            </div>
                                            <div class="form-group">
                                                <input type="number" class="form-control" value="<%= contacto[0].folio %>" id="folio" name="folio" hidden>
                                                <input type="number" class="form-control" value="<%= clienteSelected %>" id="cliente" name="cliente" hidden>
                                                <input type="number" class="form-control" value="<%= flag %>" id="flag" name="flag" hidden>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
