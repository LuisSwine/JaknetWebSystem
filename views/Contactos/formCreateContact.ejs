<%- include('../partials/head.ejs', {tituloPagina: 'Nuevo Contacto'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 1){%>
                                <li class="breadcrumb-item"><a href="/perfilCliente?cliente=<%= clienteSelected %>">Cliente</a></li>
                                <%}else{%>
                                <li class="breadcrumb-item"><a href="/admincontactos">Lista</a></li>
                                <%} %> 
                                <li class="breadcrumb-item active">Crear Cliente</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>REGISTRAR UN NUEVO CONTACTO</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/createContact" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>NOMBRE</label>
                                                <input type="text" class="form-control" placeholder="Nombre del contacto" id="nombre" name="nombre" required>
                                            </div>
                                            <div class="form-group">
                                                <label>EMAIL</label>
                                                <input type="email" class="form-control" placeholder="Correo Electronico" id="email" name="email" required>
                                            </div>
                                            <div class="form-group">
                                                <label>DESCRIPCION DE CARGO</label>
                                                <textarea class="form-control" rows="3" placeholder="Descripcion de contacto (para que se puede acudir a el)" required name="descripcion" id="descripcion"></textarea>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">CREAR CONTACTO</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>TELEFONO</label>
                                                <input type="text" class="form-control" placeholder="Numero de telefono" id="telefono" name="telefono" required>
                                            </div>
                                            <div class="form-group">
                                                <label>CLIENTE</label>
                                                <% if(flag==1){%>
                                                <input type="number" class="form-control" value="<%= clienteSelected %>" id="cliente" name="cliente" readonly>
                                                <%}else{%>
                                                <select class="form-control" name="cliente" id="cliente">
                                                    <% clientes.forEach((cliente)=>{ %>
                                                    <option value="<%= cliente.folio %>"><%= cliente.nombre %></option>
                                                    <% }) %> 
                                                </select>
                                                <%}%> 
                                            </div>
                                            <input type="number" class="form-control" value="<%= flag %>" id="flag" name="flag" hidden>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
            
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
