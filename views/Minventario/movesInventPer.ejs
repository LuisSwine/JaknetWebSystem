<%- include('../partials/head.ejs', {tituloPagina: 'REPORTE DE MOVIMIENTOS'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h4>REPORTE DE MOVIMIENTOS (<button type="button" class="btn btn-link m-b-10 m-l-5" onclick="filtrarPorFecha('<%= usuario[0].folio %>','<%= flag %>')" >Filtrar por fecha</button> | <button type="button" class="btn btn-link m-b-10 m-l-5" onclick="window.open('/movimientosInventarioPersonal?usuario=<%= usuario[0].folio %>&flag=<%= flag %>', '_self')" >LimpiarFiltro</button>)</h4>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/?folio=<%= user.folio %>">Dashboard</a></li>
                                <% if(flag == 1){%>
                                <li class="breadcrumb-item"><a href="/miInventario?usuario=<%= usuario[0].folio %>&flag=<%= flag %>">Mi Inventario</a></li>
                                <%}else{%>
                                <li class="breadcrumb-item"><a href="/miInventario?usuario=<%= usuario[0].folio %>">Mi Inventario</a></li>
                                <%} %>
                                <li class="breadcrumb-item active">Reporte de Movimientos</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bootstrap-data-table-panel">
                            <div class="table-responsive">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Folio</th>
                                            <th>Usuario</th>
                                            <th>SKU</th>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
                                            <th>Fecha</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% movimientos.forEach((movimiento)=>{%>
                                        <tr>
                                            <td><%= movimiento.folio %></td>
                                            <td><%= movimiento.nombre_usuario %> <%= movimiento.apellido_usuario %></td>
                                            <td><%= movimiento.sku %></td>
                                            <td><%= movimiento.descripcion %></td>
                                            <td><%= movimiento.cantidad %></td>
                                            <td><%= movimiento.fecha %></td>
                                        </tr>    
                                        <%}) %> 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> 
                </div>
            </section>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script> 
    function filtrarPorFecha(usuario, flag){
        Swal.fire({
            title: 'Filtrar por Fecha',
            text: 'Seleccione Fecha de Inicio y Fin de resultados',
            html:
                '<input type="date" id="fecha_inicio" class="swal2-input">'+        
                '<input type="date" id="fecha_termino" class="swal2-input">',
            focusConfirm: false
        }).then((result)=>{
            if(result.isConfirmed){
                const inicio = document.getElementById('fecha_inicio').value;
                const termino = document.getElementById('fecha_termino').value;
                const ruta = `/movimientosInventarioPersonal?usuario=${usuario}&flag=${flag}&inicio=${inicio}&termino=${termino}`
                window.location = ruta
            }
        })
    }   
</script>

