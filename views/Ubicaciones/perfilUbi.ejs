                                    <div class="col-lg-12">
                                        <div class="card">
                                            <% if(user.tipo_usuario != 2){%>
                                            <div class="card-title">
                                                <% if(flag == 1){%>
                                                    <a href="/proyectos/nuevo_proyecto?ubicacion=<%= ubicacion[0].folio %>&cliente=<%= clienteSelected %>&flag=2" class="btn btn-primary btn-flat btn-addon"><i class="ti-plus"></i>Crear un Nuevo Proyecto</a>  
                                                <%}else if(flag==0){%>
                                                    <a href="/proyectos/nuevo_proyecto?ubicacion=<%= ubicacion[0].folio %>&cliente=<%= ubicacion[0].folio_cliente %>&flag=0" class="btn btn-primary btn-flat btn-addon"><i class="ti-plus"></i>Crear un Nuevo Proyecto</a>  
                                                <%}%> 
                                            </div>
                                            <% } %> 
                                            <div class="bootstrap-data-table-panel">
                                                <div class="table-responsive">
                                                    <table id="row-select3" class="display table table-borderd table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>Folio</th>
                                                                <th>Nombre</th>
                                                                <th>Estatus</th>
                                                                <th>Acciones</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% proyectos.forEach((proyecto)=>{ %>
                                                            <tr>
                                                                <td><%= proyecto.folio %></td>
                                                                <td><%= proyecto.nombre %></td>
                                                                <td><%= proyecto.estatus %></td>
                                                                <td>
                                                                    <div class="button-list">
                                                                        <div class="btn-group btn-group-justified">
                                                                            <% if(user.tipo_usuario != 2){%>
                                                                            <% let rutaProyecto = ''
                                                                            let rutaViaticos = ''
                                                                            let rutaInventario = '' 
                                                                            if(flag == 1){
                                                                                rutaProyecto = `/proyectos/perfil?proyecto=${proyecto.folio}&ubicacion=${ubicacion[0].folio}&cliente=${clienteSelected}&flag=2`;
                                                                                rutaViaticos = `/proyectos/viaticos?proyecto=${proyecto.folio}&ubicacion=${ubicacion[0].folio}&cliente=${clienteSelected}&flag=2`;
                                                                                rutaInventario = `/proyectos/inventario?proyecto=${proyecto.folio}&ubicacion=${ubicacion[0].folio}&cliente=${clienteSelected}&flag=2`
                                                                            }else if(flag==0){
