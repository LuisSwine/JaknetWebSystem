                                    <div class="stat-digit"><%= ubicacion[0].direccion %>  <i class="ti-map-alt" onclick="window.open('<%= localizar %>', '_blank')" style="cursor: pointer;"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body p-b-0">
