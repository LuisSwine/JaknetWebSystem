                                                            <tr>
                                                                <td><%= area.folio %></td>
                                                                <td><%= area.nombre %></td>
                                                                <td>
                                                                    <div class="button-list">
                                                                        <div class="btn-group btn-group-justified">
                                                                            <a class="btn btn-pink btn-sm" target="_blank" href="<%= area.documentacion %>" title="DOCUMENTACION"><i class="ti-link"></i></a>
