<%- include('../partials/head.ejs', {tituloPagina: 'Crear Nueva Cotizacion'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 2){%>
                                    <li class="breadcrumb-item"><a href="/perfilUbicacion?ubicacion=<%= ubicacion %>&cliente=<%= cliente[0].folio %>&flag=<%= flag %>">Ubicacion</a></li>
                                <%}else if(flag == 0){%>
                                    <li class="breadcrumb-item"><a href="/perfilUbicacion?ubicacion=<%= ubicacion %>&flag=<%= flag %>">Ubicacion</a></li>
                                <%} %> 
                                <li class="breadcrumb-item active">Añadir Cotizacion</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>AÑADIR NUEVA COTIZACION</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/addCotUbi" method="post">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>PROYECTO</label>
                                                <select class="form-control" name="proyecto" id="proyecto">
                                                    <option disabled selected>--Seleccione--</option>
                                                    <% proyectos.forEach((proyecto)=>{ %>
                                                    <option value="<%= proyecto.folio %>"><%= proyecto.nombre %></option>
                                                    <% }) %> 
                                                </select>
                                            </div>
                                            <input type="number" name="cliente" id="cliente" value="<%= cliente %>" hidden>
                                            <input type="number" name="ubicacion" id="ubicacion" value="<%= ubicacion %>" hidden>
                                            <input type="number" name="flag" id="flag" value="<%= flag %>" hidden>
                                            <button type="submit" class="btn btn-primary m-b-10">AÑADIR A COTIZACION</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
