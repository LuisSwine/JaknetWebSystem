<%- include('../partials/head.ejs', {tituloPagina: 'Editar Ubicacion'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/adminubicaciones">Lista</a></li>
                                <li class="breadcrumb-item active">Editar Ubicacion</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>EDITAR UBICACION</h4> 
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/editUbi" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>NOMBRE</label>
                                                <input type="text" class="form-control" value="<%= ubicacion[0].nombre %>" id="nombre" name="nombre" required>
                                            </div>
                                            <div class="form-group">
                                                <label>DIRECCION</label>
                                                <input type="text" class="form-control" value="<%= ubicacion[0].direccion %>" id="direccion" name="direccion" required>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">EDITAR UBICACION</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>CLIENTE</label>
                                                <select class="form-control" name="cliente" id="cliente">
                                                    <% clientes.forEach((cliente)=>{ %>
                                                    <option value="<%= cliente.folio %>" <% if(ubicacion[0].cliente == cliente.folio){%> selected <% } %> ><%= cliente.nombre %></option>
                                                    <% }) %> 
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" value="<%= ubicacion[0].folio %>" id="folio" name="folio" hidden>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
