<%- include('../partials/head.ejs', {tituloPagina: 'Nueva Ubicacion'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 1){%>
                                    <li class="breadcrumb-item"><a href="/perfilCliente?cliente=<%= clienteSelected %>">Cliente</a></li>
                                <%}else{%>
                                    <li class="breadcrumb-item"><a href="/adminubicaciones">Lista</a></li>
                                <%} %>
                                <li class="breadcrumb-item active">Registrar Ubicacion</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>REGISTRAR UNA NUEVA UBICACION</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/createUbi" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>NOMBRE</label>
                                                <input type="text" class="form-control" placeholder="Nombre de la planta o sitio" id="nombre" name="nombre" required>
                                            </div>
                                            <div class="form-group">
                                                <label>DIRECCION</label>
                                                <input type="text" class="form-control" placeholder="Direccion" id="direccion" name="direccion" required>
                                                <span class="help-block">
                                                    <small>Buscar direccion en Maps <a href="https://www.google.com.mx/maps" target="_blank">aqu√≠</a></small>
                                                </span>
                                            </div>
                                            <input type="number" class="form-control" value="<% if(flag == 1){%>1<%}else{%>2<%} %>" id="back" name="back" hidden>
                                            <button type="submit" class="btn btn-primary m-b-10">REGISTRAR UBICACION</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>CLIENTE</label>
                                                <% if(flag == 1){%>
                                                    <input type="number" class="form-control" value="<%= clienteSelected %>" id="cliente" name="cliente" readonly>
                                                <%}else{%>
                                                <select class="form-control" name="cliente" id="cliente">
                                                    <option disabled selected>--Seleccione--</option>
                                                    <% clientes.forEach((cliente)=>{ %>
                                                    <option value="<%= cliente.folio %>"><%= cliente.nombre %></option>
                                                    <% }) %> 
                                                </select>
                                                <%}%> 
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
            
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
