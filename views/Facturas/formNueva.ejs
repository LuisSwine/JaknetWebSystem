<%- include('../partials/head.ejs', {tituloPagina: 'Nueva Factura'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 1){%>
                                    <li class="breadcrumb-item"><a href="/proyectos/perfil?proyecto=<%= proyecto[0].folio %>&cliente=<%= cliente %>&flag=<%= flag %>"><%= proyecto[0].nombre %></a></li>
                                <%}else if(flag == 3 || flag == 2){%>
                                    <li class="breadcrumb-item"><a href="/proyectos/perfil?proyecto=<%= proyecto[0].folio %>&ubicacion=<%= ubicacion %>&cliente=<%= cliente %>&flag=<%= flag %>"><%= proyecto[0].nombre %></a></li>
                                <%}else if(flag == 0){%>
                                    <li class="breadcrumb-item"><a href="/proyectos/perfil?proyecto=<%= proyecto[0].folio %>&flag=<%= flag %>"><%= proyecto[0].nombre %></a></li>
                                <%}else if(flag == 4){%>
                                    <li class="breadcrumb-item"><a href="/proyectos/perfil?proyecto=<%= proyecto[0].folio %>&flag=<%= flag %>&permisos=<%= permisos %>"><%= proyecto[0].nombre %></a></li>
                                <%} %>
                                <li class="breadcrumb-item active">Registrar Factura</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>REGISTRAR UNA NUEVA FACTURA</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/facturas/agregar_factura" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Identificador</label>
                                                <input type="text" class="form-control" placeholder="Identificador de la factura" id="id" name="id" required>
                                            </div>
                                            <div class="form-group">
                                                <label>Total</label>
                                                <input type="number" step="any" class="form-control" placeholder="Total de la factura" id="total" name="total" required>
                                            </div>
                                            <div class="form-group">
                                                <label>Fecha</label>
                                                <input type="date" name="fecha" id="fecha" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Proveedor</label>
                                                <select class="form-control" name="proveedor" id="proveedor">
                                                    <option selected disabled>--Seleccione--</option>
                                                    <% proveedores.forEach((proveedor)=>{ %>
                                                    <option value="<%= proveedor.folio %>"><%= proveedor.nombre %></option>
                                                    <% }) %> 
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Enlace</label>
                                                <input type="text" class="form-control" placeholder="Enlace de la factura" id="enlace" name="enlace" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <input type="number" class="form-control" value="<%= user.folio %>" id="usuario" name="usuario" hidden>
                                                <input type="number" class="form-control" value="<%= proyecto[0].folio %>" id="proyecto" name="proyecto" hidden>
                                                <input type="number" class="form-control" value="<%= cliente %>" id="cliente" name="cliente" hidden>
                                                <input type="number" class="form-control" value="<%= ubicacion %>" id="ubicacion" name="ubicacion" hidden>
                                                <input type="number" class="form-control" value="<%= flag %>" id="flag" name="flag" hidden>
                                                <input type="number" class="form-control" value="<%= permisos %>" id="permisos" name="permisos" hidden>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">Registrar Factura</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
