    <body class="text-center">
    
    <main class="form-signin w-100 m-auto">
    <form id="loginForm" action="/login" method="post">
        <img class="mb-4" src="img/logo.png" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">INICIO DE SESION</h1>

        <div class="form-floating">
            <input type="text" class="form-control" id="user" name="user" placeholder="User">
            <label for="user">USUARIO</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
            <label for="pass">CONTRASEÑA</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">INICIAR SESION</button>
    </form>
    <button class="btn btn-info btn-outline m-b-10 m-l-5 mt-3" onclick="forgetPassword()">¿Olvidaste tu contraseña?</button>
    <p class="mt-5 mb-3 text-muted">&copy; JAKNET | 2024</p>
    </main>

    <!-- INSTANCIA POR CDN DE SWEETALERT -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function forgetPassword(){
            Swal.fire({
                    title: 'Recuperar contraseña',
                    text: 'Ingrese su nombre de usuario y una vez verificado se notificará al administrador para restablecer la contraseña',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Recuperar',
                    html:
                        `<input type="text" id="user_get" placeholder="Ingrese su nombre de usuario" class="swal2-input">`,
                    focusConfirm: false
                }).then((result)=>{
                    if(result.isConfirmed){
                        const user = document.getElementById('user_get').value;
                        const ruta = `/usuarios/recuperar_contra?user=${user}`
                        window.location = ruta
                    }
                })
        }
    </script>

    <!-- Configuracion del alert -->
    <% if (alert) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: '<%= showConfirmButton %>',
                timer: '<%= timer %>'
            }).then(()=>{
                window.location = '/<%= ruta %>'
            });
        </script>
    <% } %> 

