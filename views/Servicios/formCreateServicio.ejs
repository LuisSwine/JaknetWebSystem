<%- include('../partials/head.ejs', {tituloPagina: 'Registrar Nuevo Servicio'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/adminservicios">Lista</a></li>
                                <li class="breadcrumb-item active">Crear Servicio</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>CREAR NUEVO SERVICIO</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/createService" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>DESCRIPCION DEL SERVICIO</label>
                                                <textarea class="form-control" rows="3" placeholder="Descripcion del Servicio" required name="descripcion" id="descripcion"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label>PRECIO</label>
                                                <input type="number" step="any" class="form-control" placeholder="$ PRECIO . 00" id="precio" name="precio" required>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">CREAR SERVICIO</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>CATEGORIA</label>
                                                <select class="form-control" name="categoria" id="categoria">
                                                    <% categorias.forEach((categoria)=>{ %>
                                                    <option value="<%= categoria.folio %>"><%= categoria.nombre %></option>
                                                    <% }) %> 
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
            
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
