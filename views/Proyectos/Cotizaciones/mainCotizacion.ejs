                                                        <tfoot>
                                                            <tr>
                                                                <th>Folio</th>
                                                                <th>Servicio</th>
                                                                <th>Costo Servicio</th>
                                                                <th>Tecnicos</th>
                                                                <th>Supervisores</th>
                                                                <th>Dias</th>
                                                                <th>Costo de Personal</th>
                                                                <th>Subtotal</th>
                                                                <th>Acciones</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function showDesc(descripcion){
        Swal.fire({
            icon: 'info',
            title: 'Descripcion',
            text: `${descripcion}`,
        })
    }
    
    function confirmDeleteProduct(cotizacion, folio, proyecto, cliente, ubicacion, flag, permisos){
        Swal.fire({
            title: '¿ESTAS SEGURO?',
            text: `Se eliminará el producto ${folio} de la cotizacion ${cotizacion} (recuerda que puedes modificar el registro)`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Elimiar'
            }).then((result) => {
            if (result.isConfirmed) {
                const ruta = `/deleteProductCot?cotizacion=${cotizacion}&folio=${folio}&proyecto=${proyecto}&cliente=${cliente}&ubicacion=${ubicacion}&flag=${flag}&permisos=${permisos}`
                window.location = ruta
            }
        })
    }
    function confirmDeleteService(cotizacion, folio, proyecto, cliente, ubicacion, flag, permisos){
        Swal.fire({
            title: '¿ESTAS SEGURO?',
            text: `Se eliminará el servicio ${folio} de la cotizacion ${cotizacion} (recuerda que puedes modificar el registro)`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Elimiar'
            }).then((result) => {
            if (result.isConfirmed) {
                const ruta = `/deleteServiceCot?cotizacion=${cotizacion}&folio=${folio}&proyecto=${proyecto}&cliente=${cliente}&ubicacion=${ubicacion}&flag=${flag}&permisos=${permisos}`
                window.location = ruta
            }
        })
    }
    
    function defineTasa(folio, proyecto, cliente, ubicacion, flag, permisos){
        Swal.fire({
            title: 'DEFINIR PORCENTAJE DE RENDIMIENTO',
            input: 'text',
            icon: 'info',
            inputLabel: 'Establecer porcentaje (este porcentaje no se mostrará al cliente al enviar la cotizacion)',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else{
                    const ruta = `/definirTasa?cotizacion=${folio}&tasa=${value}&proyecto=${proyecto}&cliente=${cliente}&ubicacion=${ubicacion}&flag=${flag}&permisos=${permisos}`
                    window.location = ruta
                }
            }
        })
    }
    function defineTecnico(folio, proyecto, cliente, ubicacion, flag, permisos){
        Swal.fire({
            title: 'DEFINIR COSTO POR DIA PARA TECNICO',
            input: 'text',
            icon: 'info',
            inputLabel: 'Establecer costo (este costo no se mostrará al cliente al enviar la cotizacion)',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else{
                    const ruta = `/definirTecnico?cotizacion=${folio}&costo=${value}&proyecto=${proyecto}&cliente=${cliente}&ubicacion=${ubicacion}&flag=${flag}&permisos=${permisos}`
                    window.location = ruta
                }
            }
        })
    }
    function defineSupervisor(folio, proyecto, cliente, ubicacion, flag, permisos){
        Swal.fire({
            title: 'DEFINIR COSTO POR DIA PARA SUPERVISOR',
            input: 'text',
            icon: 'info',
            inputLabel: 'Establecer costo (este costo no se mostrará al cliente al enviar la cotizacion)',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else{
                    const ruta = `/definirSupervisor?cotizacion=${folio}&costo=${value}&proyecto=${proyecto}&cliente=${cliente}&ubicacion=${ubicacion}&flag=${flag}&permisos=${permisos}`
                    window.location = ruta
                }
            }
        })
    }
    function defineIntereses(folio, proyecto, cliente, ubicacion, flag, permisos){
        Swal.fire({
            title: 'DEFINIR PORCENTAJE DE INTERESES',
            input: 'text',
            icon: 'info',
            inputLabel: 'Establecer porcentaje (este porcentaje debe considerar IVA y de más intereses o impuestos a aplicar)',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else{
                    const ruta = `/definirIntereses?cotizacion=${folio}&valor=${value}&proyecto=${proyecto}&cliente=${cliente}&ubicacion=${ubicacion}&flag=${flag}&permisos=${permisos}`
                    window.location = ruta
                }
            }
        })
    }
</script>

