<%- include('../../partials/head.ejs', {tituloPagina: 'AÃ±adir una nueva tarea'}) %> 
<%- include('../../partials/linksNav.ejs')%> 
<%- include('../../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 0){%>
                                <li class="breadcrumb-item"><a href="/tareasetapa?etapa=<%= etapa[0].folio %>&proyecto=<%= proyecto %>&flag=<%= flag %>">Tareas</a></li>
                                <%}else if(flag == 1){%>
                                <li class="breadcrumb-item"><a href="/tareasetapa?etapa=<%= etapa[0].folio %>&proyecto=<%= proyecto %>&cliente=<%= cliente %>&flag=<%= flag %>">Tareas</a></li>
                                <%}else if(flag == 2 || flag == 3){%>
                                <li class="breadcrumb-item"><a href="/tareasetapa?etapa=<%= etapa[0].folio %>&proyecto=<%= proyecto %>&cliente=<%= cliente %>&ubicacion=<%= ubicacion %>&flag=<%= flag %>">Tareas</a></li>
                                <%}else if(flag == 4){%>
                                <li class="breadcrumb-item"><a href="/tareasetapa?etapa=<%= etapa[0].folio %>&proyecto=<%= proyecto %>&flag=<%= flag %>&permisos=<%= permisos %>">Tareas</a></li>
                                <!-- <li class="breadcrumb-item"><a href="/tareasetapa?etapa=<%//= etapa[0].folio %>&ubicacion=<%//= ubicacion %>&flag=4">Tareas</a></li>
                                <%//}else if(flag == 5){%>
                                <li class="breadcrumb-item"><a href="/tareasetapa?etapa=<%//= etapa[0].folio %>&ubicacion=<%//= ubicacion %>&cliente=<%//= cliente %>&flag=5">Tareas</a></li>                                    
                                <%//}else if(flag == 6){%>
                                <li class="breadcrumb-item"><a href="/tareasetapa?etapa=<%//= etapa[0].folio %>&cliente=<%//= cliente %>&flag=<%//= flag %>">Tareas</a></li> -->
                                <%} %> 
                                <li class="breadcrumb-item active">Crear Tarea</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>CREAR NUEVA TAREA</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/createTarea" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>DESCRIPCION DE LA TAREA</label>
                                                <textarea class="form-control" rows="3" placeholder="Describa brevemente la tarea" required name="descripcion" id="descripcion"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <input type="number" class="form-control" value="<%= etapa[0].folio %>" id="etapa" name="etapa" hidden>
                                                <input type="number" class="form-control" value="7" id="estatus" name="estatus" hidden>
                                                <input type="number" class="form-control" value="<%= proyecto %>" id="proyecto" name="proyecto" hidden>
                                                <input type="number" class="form-control" value="<%= ubicacion %>" id="ubicacion" name="ubicacion" hidden>
                                                <input type="number" class="form-control" value="<%= cliente %>" id="cliente" name="cliente" hidden>
                                                <input type="number" class="form-control" value="<%= flag %>" id="flag" name="flag" hidden>
                                                <input type="permisos" class="form-control" value="<%= permisos %>" id="permisos" name="permisos" hidden>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>FECHA DE ENTREGA</label>
                                                <input type="date" class="form-control" id="fecha_entrega" name="fecha_entrega" required>
                                            </div>
                                            <div class="form-group">
                                                <label>TIPO DE TAREA</label>
                                                <select class="form-control" name="tipo" id="tipo">
                                                    <option disabled selected>--Seleccione--</option>
                                                    <% tipos.forEach((tipo)=>{ %>
                                                    <option value="<%= tipo.folio %>"><%= tipo.tipo %> </option>
                                                    <% }) %> 
                                                </select>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">CREAR TAREA</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
            
        </div>
    </div>
</div>

<%- include('../../partials/scriptsNav.ejs') %> 
<%- include('../../partials/footer.ejs') %> 
