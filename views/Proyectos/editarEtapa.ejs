<%- include('../partials/head.ejs', {tituloPagina: 'Editar Etapa'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 1){%>
                                    <li class="breadcrumb-item"><a href="/profileProyect?proyecto=<%= proyecto %>&cliente=<%= cliente %>&flag=<%= flag %>">Proyecto</a></li>
                                <%}else if(flag == 3 || flag == 2){%>
                                    <li class="breadcrumb-item"><a href="/profileProyect?proyecto=<%= proyecto %>&ubicacion=<%= ubicacion %>&cliente=<%= cliente %>&flag=<%= flag %>">Proyecto</a></li>
                                <%}else if(flag == 0){%>
                                    <li class="breadcrumb-item"><a href="/profileProyect?proyecto=<%= proyecto %>&flag=<%= flag %>">Proyecto</a></li>
                                <%}else if(flag == 4){%>
                                    <li class="breadcrumb-item"><a href="/profileProyect?proyecto=<%= proyecto %>&flag=<%= flag %>&permisos=<%= permisos %>">Proyecto</a></li> 
                                <%} %>
                                <li class="breadcrumb-item active">Editar Etapa</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>EDITAR ETAPA</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/editEtapa" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>NOMBRE</label>
                                                <input type="text" class="form-control" value="<%= etapa[0].nombre %>" id="nombre" name="nombre" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" value="<%= etapa[0].folio %>" id="folio" name="folio" hidden>
                                                <input type="number" class="form-control" value="<%= proyecto %>" id="proyecto" name="proyecto" hidden>
                                                <input type="number" class="form-control" value="<%= cliente %>" id="cliente" name="cliente" hidden>
                                                <input type="number" class="form-control" value="<%= ubicacion %>" id="ubicacion" name="ubicacion" hidden>
                                                <input type="number" class="form-control" value="<%= flag %>" id="flag" name="flag" hidden>
                                                <input type="number" class="form-control" value="<%= permisos %>" id="permisos" name="permisos" hidden>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">EDITAR ETAPA</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>AREA</label>
                                                <select class="form-control" name="area" id="area">
                                                    <option disabled>--Seleccione--</option>
                                                    <% areas.forEach((area)=>{ %>
                                                    <option value="<%= area.folio %>" <% if(area.folio == etapa[0].folio_area){%> selected <%}%>><%= area.nombre %></option>
                                                    <% }) %> 
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
            
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
