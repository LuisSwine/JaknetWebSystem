<%- include('../partials/head.ejs', {tituloPagina: 'MOVIMIENTOS PROYECTOS'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h4>Movimientos realizados a proyectos</h4>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/?folio=<%= user.folio %>">Dashboard</a></li>
                                <li class="breadcrumb-item active"><a href="reporte_movimientos?almacen=<%= almacen.folio %>">Reporte</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bootstrap-data-table-panel">
                            <div class="table-responsive">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Usuario Registra</th>
                                            <th>Proyecto</th>
                                            <th>SKU</th>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% movimientos_proyecto.forEach((movimiento)=>{%>
                                        <tr>
                                            <td><%= movimiento.fecha.toLocaleDateString('en-GB') %></td>
                                            <td><%= movimiento.nombre_usuario_afectado %> <%= movimiento.apellido_usuario_afectado %></td>
                                            <td><%= movimiento.cliente %> - <%= movimiento.ubicacion %> - <%= movimiento.proyecto %></td>
                                            <td><%= movimiento.sku %></td>
                                            <td><%= movimiento.descripcion %></td>
                                            <td><%= movimiento.cantidad %></td>
                                        </tr>    
                                        <%}) %> 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> 
                </div>
            </section>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<%- include('../partials/scriptsNav.ejs') %> 
