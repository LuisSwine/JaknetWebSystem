<%- include('../partials/head.ejs', {tituloPagina: 'Editar Area'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres %></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <% if(flag == 1){%>
                                    <li class="breadcrumb-item"><a href="/perfilUbicacion?ubicacion=<%= ubicacion %>&cliente=<%= clienteSelected %>&flag=<%= flag %>">Ubicacion</a></li>
                                <%}else if(flag == 0){%>
                                    <li class="breadcrumb-item"><a href="/perfilUbicacion?ubicacion=<%= ubicacion %>&flag=<%= flag %>">Ubicacion</a></li>
                                <%} %> 
                                <li class="breadcrumb-item active">Editar Area</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>EDITAR AREA</h4> 
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/editArea" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>NOMBRE</label>
                                                <input type="text" class="form-control" value="<%= area[0].nombre %>" id="nombre" name="nombre" required>
                                            </div>
                                            <input type="text" class="form-control" value="<%= area[0].planta %>" id="planta" name="planta" hidden>
                                            <button type="submit" class="btn btn-primary m-b-10">EDITAR AREA</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>DOCUMENTACION</label>
                                                <input type="url" class="form-control" value="<%= area[0].documentacion %>" id="documentacion" name="documentacion" required>
                                                <span class="help-block">
                                                    <small>Generar nuevo link de documentacion <a href="https://drive.google.com/drive/folders/19g34ssIJlP_uY1sZEU8WzDb4F_Ktdos_?usp=sharing" target="_blank">aqu√≠</a></small>
                                                </span>
                                            </div>
                                            <input type="number" class="form-control" value="<%= area[0].folio %>" id="folio" name="folio" hidden>
                                            <input type="number" class="form-control" value="<%= clienteSelected %>" id="cliente" name="cliente" hidden>
                                            <input type="number" class="form-control" value="<%= flag %>" id="flag" name="flag" hidden>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
