<%- include('../partials/head.ejs', {tituloPagina: 'VIATICOS | Administrador'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h4>EXPORTAR DATOS <%= data %></h4>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/?folio=<%= user.folio %>">Dashboard</a></li>
                                <% if(clave !== undefined && usuario === undefined){%>
                                <li class="breadcrumb-item active"><a href="/adminClaves?clave=<%= clave %>">Clave</a></li>
                                <%}else if(usuario === undefined){%>
                                <li class="breadcrumb-item active"><a href="/adminViaticosGrl">Viaticos</a></li>
                                <%}else if(clave !== undefined){%>
                                <li class="breadcrumb-item active"><a href="/seguimientoClaves?usuario=<%= usuario %>&clave=<%= clave %>">Clave</a></li>
                                <%}else if(clave === undefined){%>
                                <li class="breadcrumb-item active"><a href="/adminViaticosPersonal?usuario=<%= usuario %>">Viaticos</a></li>
                                <%}%> 
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="row">
                    <% if(data == 'depositos'){%>
                    <div class="col-lg-12">
                        <div class="bootstrap-data-table-panel">
                            <div class="table-responsive">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Folio</th>
                                            <th>Beneficiario</th>
                                            <th>Emisor</th>
                                            <th>Concepto</th>
                                            <th>Uso</th>
                                            <th>Clave</th>
                                            <th>Proyecto</th>
                                            <th>Fecha</th>
                                            <th>Monto</th>
                                            <th>Enlace</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% depositos.forEach((deposito)=>{%>
                                        <tr>
                                            <td><%= deposito.folio %></td>
                                            <td><%= deposito.beneficiario %></td>
                                            <td><%= deposito.nombre_emisor %> <%= deposito.apellido_emisor %></td>
                                            <td><%= deposito.concepto %></td>
                                            <td><%= deposito.uso %></td>
                                            <td><%= deposito.clave %></td>
                                            <td><%= deposito.nombre_proyecto %></td>
                                            <td><%= deposito.fecha.toLocaleDateString('en-GB') %></td>
                                            <td>$<%= deposito.monto.toFixed(2) %></td>
                                            <td><%= deposito.enlace %></td>
                                        </tr>    
                                        <%}) %> 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <%}else if(data == 'comprobantes'){%>
                        <div class="col-lg-12">
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Folio</th>
                                                <th>Beneficiario</th>
                                                <th>Emisor</th>
                                                <th>Concepto</th>
                                                <th>Uso</th>
                                                <th>Clave</th>
                                                <th>Proyecto</th>
                                                <th>Fecha</th>
                                                <th>Monto</th>
                                                <th>Enlace</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% comprobaciones.forEach((comprobacion)=>{%>
                                            <tr>
                                                <td><%= comprobacion.folio %></td>
                                                <td><%= comprobacion.beneficiario %></td>
                                                <td><%= comprobacion.nombre_emisor %> <%= comprobacion.apellido_emisor %></td>
                                                <td><%= comprobacion.concepto %></td>
                                                <td><%= comprobacion.uso %></td>
                                                <td><%= comprobacion.clave %></td>
                                                <td><%= comprobacion.nombre_proyecto %></td>
                                                <td><%= comprobacion.fecha.toLocaleDateString('en-GB') %></td>
                                                <td>$<%= comprobacion.monto.toFixed(2) %></td>
                                                <td><%= comprobacion.enlace %></td>
                                            </tr>    
                                            <%}) %> 
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <%} %> 
                </div>
            </section>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>    
</script>

