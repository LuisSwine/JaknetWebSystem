<%- include('../partials/head.ejs', {tituloPagina: 'UNIDADES'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h4>UNIDADES DE MEDIDA</h4>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admininventario">Inventario</a></li>
                                <li class="breadcrumb-item active">UNIDADES</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <a href="/formcreateunit" class="btn btn-primary btn-flat btn-addon"><i class="ti-plus"></i>Crear Unidad</a>   
                            </div>
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="row-select" class="display table table-borderd table-hover">
                                        <thead>
                                            <tr>
                                                <th>Folio</th>
                                                <th>Nombre</th>
                                                <th>Abreviatura</th>
                                                <th>SAT</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% unidades.forEach((unidad)=>{ %>
                                            <tr>
                                                <td><%= unidad.folio %></td>
                                                <td><%= unidad.nombre %></td>
                                                <td><%= unidad.abreviatura %></td>
                                                <td><%= unidad.codigo_sat %></td>
                                                <td>
                                                    <div class="button-list">
                                                        <div class="btn-group btn-group-justified">
                                                            <button class="btn btn-primary btn-sm" onclick="editServicio('<%= unidad.folio %>')"><i class="ti-pencil"></i></button>
                                                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('<%= unidad.folio %>')"><i class="ti-trash"></i></button>
                                                        </div>
                                                    </div>
                                                </td>   
                                            </tr>
                                            <% }) %> 
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Folio</th>
                                                <th>Nombre</th>
                                                <th>Abreviatura</th>
                                                <th>SAT</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function editServicio(folio){
        const ruta = `/editarunidad/${folio}`
        window.location = ruta
    }
    function confirmDelete(folio){
        Swal.fire({
            title: '¿ESTAS SEGURO?',
            text: `Se eliminará la unidad ${folio} (Si la unidad se encuentra en uso en algun producto no podrá eliminarse)`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Elimiar'
            }).then((result) => {
            if (result.isConfirmed) {
                const ruta = `/deleteUnidad/${folio}`
                window.location = ruta
            }
        })
    }
    
</script>

