<%- include('../partials/head.ejs', {tituloPagina: 'Nueva Unidad'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/adminunidades">Lista</a></li>
                                <li class="breadcrumb-item active">Registrar una Unidad de Medida</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>REGISTRAR UNA NUEVA UNIDAD</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/createUnit" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>NOMBRE</label>
                                                <input type="text" class="form-control" placeholder="Unidad" id="nombre" name="nombre" required>
                                            </div>
                                            <div class="form-group">
                                                <label>CODIGO SAT</label>
                                                <input type="text" class="form-control" placeholder="Codigo SAT" id="codigo_sat" name="codigo_sat" required>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">REGISTRAR UNIDAD</button>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>ABREVIATURA</label>
                                                <input type="text" class="form-control" placeholder="Abreviatura de la unidad" id="abreviatura" name="abreviatura" required>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 