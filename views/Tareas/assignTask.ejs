<%- include('../partials/head.ejs', {tituloPagina: 'Asignar tarea'}) %> 
<%- include('../partials/linksNav.ejs')%> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Bienvenido <%= user.nombres%></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/?folio=<%= user.folio %>">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admintareas">Tareas</a></li>
                                <li class="breadcrumb-item active">Asignar Tarea</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>ASIGNAR TAREA</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                <form action="/asignTaskAdmin" method="post">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>USUARIO</label>
                                                <select class="form-control" name="usuario" id="usuario">
                                                    <option disabled selected>--Seleccione--</option>
                                                    <% usuarios.forEach((usuario)=>{ %>
                                                    <option value="<%= usuario.folio_usuario %>"><%= usuario.folio_usuario %> - <%= usuario.nombres %> <%= usuario.apellidos %></option>
                                                    <% }) %> 
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <input type="number" value="<%= tarea[0].folio %>" class="form-control" id="tarea" name="tarea" hidden>
                                            </div>
                                            <button type="submit" class="btn btn-primary m-b-10">ASIGNAR TAREA</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </section>
        </div>
    </div>
</div>

<%- include('../partials/scriptsNav.ejs') %> 
<%- include('../partials/footer.ejs') %> 
