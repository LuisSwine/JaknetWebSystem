<%- include('../partials/head.ejs', {tituloPagina: 'Catalogo de Productos'}) %> 
<%- include('../partials/linksNav.ejs') %> 
<%- include('../partials/header.ejs', {user: user}) %> 

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h4>Lista de Productos</h4>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item active">Productos</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <a href="/formcreateproducts" class="btn btn-primary btn-flat btn-addon"><i class="ti-plus"></i>Crear Producto</a>     
                                <button onclick="crearTipo()" class="btn btn-success btn-flat btn-addon"><i class="ti-plus"></i>Crear Tipo</button>     
                                <button onclick="crearCategoria()" class="btn btn-danger btn-flat btn-addon"><i class="ti-plus"></i>Crear Categoria</button>     
                            </div>
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="row-select" class="display table table-borderd table-hover">
                                        <thead>
                                            <tr>
                                                <th>Acciones</th>
                                                <th>SKU</th>
                                                <th>Descripcion</th>
                                                <th>Categoria</th>
                                                <th>Tipo</th>
                                                <th>Marca</th>
                                                <th>Precio</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% productos.forEach((producto)=>{ %>
                                            <tr>
                                                <td>
                                                    <div class="button-list">
                                                        <div class="btn-group btn-group-justified">
                                                            <a class="btn btn-success btn-sm" href="<%= producto.enlace %>" target="_blank"><i class="ti-link"></i></a>
                                                            <button class="btn btn-primary btn-sm" onclick="editUser('<%= producto.folio %>')"><i class="ti-pencil"></i></button>
                                                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('<%= producto.folio %>')"><i class="ti-trash"></i></button>
                                                        </div>
                                                    </div>
                                                </td>  
                                                <td><%= producto.sku %></td>
                                                <td><%= producto.descripcion %></td>
                                                <td><%= producto.categoria %></td>
                                                <td><%= producto.tipo %></td>
                                                <td><%= producto.marca %></td>
                                                <td>$<%= producto.precio %></td> 
                                            </tr>
                                            <% }) %> 
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Acciones</th>
                                                <th>SKU</th>
                                                <th>Descripcion</th>
                                                <th>Categoria</th>
                                                <th>Tipo</th>
                                                <th>Marca</th>
                                                <th>Precio</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function crearTipo(){
        const {value: nameTipo} = Swal.fire({
            title: 'NUEVO TIPO',
            input: 'text',
            icon: 'info',
            inputLabel: 'Nombre del nuevo tipo',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else{
                    const ruta = `/createTipo/${value}`
                    window.location = ruta
                }
            }
        })
    }
    function crearCategoria(){
        Swal.fire({
            title: 'NUEVA CATEGORIA',
            input: 'text',
            icon: 'info',
            inputLabel: 'Nombre de la nueva categoria',
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value) {
                    return 'Tienes que escribir algo'
                }else{
                    const ruta = `/createCategoria/${value}`
                    window.location = ruta
                }
            }
        })
    }
    function editUser(folio){
        const ruta = `/editarproducto/${folio}`
        window.location = ruta
    }
    function confirmDelete(folio){
        Swal.fire({
            title: '¿ESTAS SEGURO?',
            text: `Se eliminará el producto ${folio}`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Elimiar'
            }).then((result) => {
            if (result.isConfirmed) {
                const ruta = `/deleteProduct/${folio}`
                window.location = ruta
            }
        })
    }
    
</script>

